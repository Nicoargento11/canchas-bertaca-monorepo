{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true
  },
  "watchOptions": {
    "ignore": [
      "**/generated/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/*.spec.ts"
    ]
  }
}